<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>Sakai Sms Implementation</name>
    <groupId>org.sakaiproject.sms</groupId>
    <artifactId>sms-impl</artifactId>
    <organization>
        <name>Sakai Project</name>
        <url>http://sakaiproject.org/</url>
    </organization>
    <inceptionYear>2008</inceptionYear>
    <description>Sms implementation</description>
    <packaging>jar</packaging>
    <properties>
        <deploy.target />
    </properties>
    
    
	<repositories>

		<repository>
			<id>Sakai</id>
			<name>Sakai Maven Repo</name>
			<url>http://source.sakaiproject.org/maven2</url>
		</repository>

		<repository>
			<id>opensymphony</id>
			<url>http://maven2.opensymphony.com</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

    <!-- the base is parent -->
    <parent>
        <groupId>org.sakaiproject</groupId>
        <artifactId>sms</artifactId>
        <version>0.1</version><!--Sms.version-->
    </parent>

    <dependencies>

        <!-- internal dependencies -->
        <dependency>
            <groupId>org.sakaiproject.sms</groupId>
            <artifactId>sms-api</artifactId>
            <version>0.1</version>
        </dependency>
        
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.14</version>
		</dependency>
		
		<dependency>
			<groupId>net.sourceforge.groboutils</groupId>
			<artifactId>groboutils-core</artifactId>
			<version>5</version>
		</dependency>
		
		<dependency>
			<groupId>com.google.code</groupId>
			<artifactId>jsmpp</artifactId>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.4.3</version>
		</dependency>
		
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.4.3</version>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.14</version>
		</dependency>
		
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
		</dependency>
		
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring</artifactId>
			<version>2.5.4</version>
		</dependency>
		
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.5</version>
		</dependency>		
    </dependencies>

	<build>
		<finalName>sms_impl</finalName>
		<sourceDirectory>${basedir}/src/java</sourceDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src/resources</directory>
			</resource>
<!--			<resource>-->
<!--				<directory>${basedir}</directory>-->
<!--				<includes>-->
<!--					<include>smpp.properties</include>-->
<!--					<include>messages_en.properties</include>-->
<!--				</includes>-->
<!--				<excludes>-->
<!--					<exclude>src/*</exclude>-->
<!--				</excludes>-->
<!--			</resource>-->
			

<!--			<resource>-->
<!--				<directory>${basedir}</directory>-->
<!--				<includes>-->
<!--					<include>sms.properties</include>-->
<!--				</includes>-->
<!--				<excludes>-->
<!--					<exclude>src/*</exclude>-->
<!--				</excludes>-->
<!--			</resource>			-->
			
		</resources>
		
		<testResources>
<!--			<testResource>-->
<!--				<directory>${basedir}/src/resources</directory>-->
<!--				<excludes>-->
<!--					<exclude>**/log4j.properties</exclude>-->
<!--					 Will be double loded by hbm2ddl otherwise -->
<!--					<exclude>**/hibernate-mappings.hbm.xml</exclude>-->
<!--				</excludes>-->
<!--			</testResource>-->
			<testResource>
				<directory>${basedir}/src/resources</directory>
			</testResource>
		</testResources>		
		
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>hibernate3-maven-plugin</artifactId>
				<version>2.2-SNAPSHOT</version>


				<executions>
					<execution>
						<phase>process-classes</phase>
						<goals>
							<goal>hbm2ddl</goal>
							<!--<goal>hbm2java</goal>
						--></goals>
					</execution>

				</executions>

				<configuration>
					<outputDirectory>
						<!--
							<hbm2cfgxml>/src/java/resources</hbm2cfgxml>
							<hbm2java>/src/java/org/sakaiproject/sms/hibernate/model</hbm2java>
						-->
					</outputDirectory>
					<components>
						<component>
							<name>hbm2ddl</name>
							<implementation>configuration</implementation>
						</component>
					</components>
					<componentProperties>
						<!--
							Can ignore this, it will use the hibernate.properties file
							automatically
						-->
						<!--<propertyFile>target/classes/hibernate.properties</propertyFile>-->
						<!--
							<configurationfile>target/classes/hibernate.cfg.xml</configurationfile>
						-->
						<persistenceunit>Default</persistenceunit>
						<outputfilename>schema.ddl</outputfilename>
						<drop>false</drop>
						<create>true</create>
						<update>true</update>
						<export>true</export>
						<format>true</format>
					</componentProperties>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>**</exclude>
					</excludes>
				</configuration>

			</plugin>

		</plugins>
		<extensions>
			<extension>
				<groupId>mysql</groupId>
				<artifactId>mysql-connector-java</artifactId>
				<version>5.1.5</version>
			</extension>
		</extensions>
		
	</build>

</project>
