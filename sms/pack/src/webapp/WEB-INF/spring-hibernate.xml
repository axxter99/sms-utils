<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- define the list of HBM mapping files -->
    <bean id="org.sakaiproject.sms.hbmMappingList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <value>hibernate-mappings.hbm.xml</value>
            </list>
        </constructor-arg>
    </bean>

   <bean id="org.sakaiproject.sms.dao.SmsDao" class="org.sakaiproject.sms.dao.SmsDaoImpl">
      <property name="sessionFactory" ref="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
      <property name="transactionManager" ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
      <property name="persistentClasses">
         <list>
            <value>org.sakaiproject.sms.model.hibernate.SmsAccount</value>
            <value>org.sakaiproject.sms.model.hibernate.SmsConfig</value>
			<value>org.sakaiproject.sms.model.hibernate.SmsMessage</value>
            <value>org.sakaiproject.sms.model.hibernate.SmsTask</value>
            <value>org.sakaiproject.sms.model.hibernate.SmsTransaction</value>
         </list>
        </property>
    </bean>

</beans>
