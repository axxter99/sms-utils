<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- Binding  Beans -->
 
  <!--  Renderers -->
  <bean id="navBarRenderer" class="org.sakaiproject.sms.tool.renderers.NavBarRenderer" />

  <!--  Producers -->
  <bean class="org.sakaiproject.sms.tool.producers.MainProducer">
  	<property name="smsTaskLogic" ref="org.sakaiproject.sms.logic.hibernate.SmsTaskLogic"/>
	<property name="smsAccountLogic" ref="org.sakaiproject.sms.logic.hibernate.SmsAccountLogic" />
	<property name="externalLogic" ref="org.sakaiproject.sms.logic.external.ExternalLogic" />
	<property name="sakaiDateFormat" ref="sakaiDateFormat" />
  	<property name="statusUtils" ref="statusUtils" />
  </bean>
  
  <bean class="org.sakaiproject.sms.tool.producers.SendSMSProducer">
  	<property name="smsAccountLogic" ref="org.sakaiproject.sms.logic.hibernate.SmsAccountLogic" />
	<property name="externalLogic" ref="org.sakaiproject.sms.logic.external.ExternalLogic" />
  </bean>
  
  <bean class="org.sakaiproject.sms.tool.producers.ChooseRecipientsProducer">
  	<property name="smsAccountLogic" ref="org.sakaiproject.sms.logic.hibernate.SmsAccountLogic" />
	<property name="externalLogic" ref="org.sakaiproject.sms.logic.external.ExternalLogic" />
 	<property name="messageLocator" ref="uk.org.ponder.messageutil.MessageLocator" />
  </bean>
  
  <bean class="org.sakaiproject.sms.tool.producers.SentSmsDetailProducer">
  	<property name="smsTaskLogic" ref="org.sakaiproject.sms.logic.hibernate.SmsTaskLogic"/>
	<property name="externalLogic" ref="org.sakaiproject.sms.logic.external.ExternalLogic" />
	<property name="sakaiDateFormat" ref="sakaiDateFormat" />
  	<property name="statusUtils" ref="statusUtils" />
	<property name="navBarRenderer" ref="navBarRenderer" />
  </bean>

  <bean class="org.sakaiproject.sms.tool.producers.FailedSmsDetailProducer">
  	<property name="smsTaskLogic" ref="org.sakaiproject.sms.logic.hibernate.SmsTaskLogic"/>
	<property name="sakaiDateFormat" ref="sakaiDateFormat" />
  	<property name="statusUtils" ref="statusUtils" />
	<property name="navBarRenderer" ref="navBarRenderer" />
  </bean>

  <bean class="org.sakaiproject.sms.tool.producers.ProgressSmsDetailProducer">
  	<property name="smsTaskLogic" ref="org.sakaiproject.sms.logic.hibernate.SmsTaskLogic"/>
	<property name="dateUtil" ref="dateUtil" />
  	<property name="statusUtils" ref="statusUtils" />
	<property name="navBarRenderer" ref="navBarRenderer" />
  </bean>

  <!--  Action Beans -->
 
</beans>
