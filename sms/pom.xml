<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>Sakai Sms</name>
    <groupId>org.sakaiproject.sms</groupId>
    <artifactId>sms</artifactId>
    <organization>
        <name>Sakai Project</name>
        <url>http://sakaiproject.org/</url>
    </organization>
    <inceptionYear>2008</inceptionYear>
    <packaging>pom</packaging>
    <version>0.8-SNAPSHOT</version><!--Sms.version-->




    <!-- Sakai master pom is the parent -->
    <parent>
        <artifactId>master</artifactId>
        <groupId>org.sakaiproject</groupId>
	<version>2.7.0-SNAPSHOT</version>
        <relativePath>../master/pom.xml</relativePath>
    </parent>
    <profiles>
        <profile>
            <id>full</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>api</module>
                <module>stubs</module>
                <module>impl</module>
                <module>pack</module>
                <module>tool</module>
				<module>user-tool</module>
            </modules>
        </profile>
        <profile>
            <id>tool</id>
            <modules>
                <module>tool</module>
            </modules>
        </profile>
        <profile>
            <id>user-tool</id>
            <modules>
                <module>user-tool</module>
            </modules>
        </profile>
        <profile>
            <id>api</id>
            <modules>
                <module>api</module>
            </modules>
        </profile>
    </profiles>

    <!-- handles the management of all related dependencies -->
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.sakaiproject.sms</groupId>
				<artifactId>sms-api</artifactId>
				<version>0.8-SNAPSHOT</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.sakaiproject.sms</groupId>
				<artifactId>sms-impl</artifactId>
				<version>0.8-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>org.sakaiproject.sms</groupId>
				<artifactId>sms-stubs</artifactId>
				<version>0.8-SNAPSHOT</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>net.sourceforge.groboutils
				</groupId>
				<artifactId>groboutils-core</artifactId>
				<version>5</version>
			</dependency>
			<dependency>
				<groupId>com.google.code</groupId>
				<artifactId>jsmpp</artifactId>
				<version>2.0</version>
			</dependency>
			<dependency>
				<groupId>org.azeckoski</groupId>
				<artifactId>reflectutils</artifactId>
				<version>0.9.11</version>
			</dependency>
			<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.4.3</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.4.3</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		</dependencies>
	</dependencyManagement>
	<repositories>

		<repository>
			<id>Sakai</id>
			<name>Sakai Maven Repo</name>
			<url>http://source.sakaiproject.org/maven2</url>
		</repository>

		<repository>
			<id>opensymphony</id>
			<url>http://maven2.opensymphony.com</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>honestyworks</id>
			<name>honestyworks Maven Repository</name>
			<url>http://my.honestyworks.jp/maven2/</url>
		</repository>
	</repositories>
	
	<issueManagement>
        <system>JIRA</system>
        <url>http://jira.sakaiproject.org/jira/browse/SMS</url>
    </issueManagement>
	<!-- define the license -->
    <licenses>
        <license>
            <name>Educational Community License, Version 2.0</name>
            <url>http://www.osedu.org/licenses/ECL-2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
  <scm>
    <connection>scm:svn:https://source.sakaiproject.org/contrib/sms/trunk/sms</connection>
