<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  
  <!-- Binding  Beans -->
  <bean id="sMSConfigBean" class="org.sakaiproject.sms.beans.SMSConfigBean"/>
  <bean id="searchFilterBean" class="org.sakaiproject.sms.beans.SearchFilterBean"/>	

  <!--  Producers -->
  <bean class="org.sakaiproject.sms.producers.SmsTestProducer" />
  <bean class="org.sakaiproject.sms.producers.SMSConfigProducer"/>
  <bean class="org.sakaiproject.sms.producers.SearchListProducer"/>  

  <!--  Action Beans -->  
  <bean id="SmsTestActionBean" class="org.sakaiproject.sms.beans.SmsTestActionBean">
  	<property name="smsSmpp" ref="org.sakaiproject.sms.api.SmsSmpp" />
  	<property name="smsMessageLocator" ref="SmsMessageLocator" />
  	<property name="messages" ref="targettedMessageList"/>
  </bean>

  <bean id="sMSConfigActionBean" class="org.sakaiproject.sms.beans.SMSConfigActionBean">
  	 <property name="smsConfigBean" ref="sMSConfigBean"/>
  </bean>
  
  <!-- Locators -->
  <bean id="SmsMessageLocator" class="org.sakaiproject.sms.otp.SmsMessageLocator" />
  
</beans>