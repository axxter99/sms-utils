  <!--   Renderers -->
  
  <bean id="searchCriteriaRenderer" class="org.sakaiproject.sms.renderers.SearchCriteriaRenderer"/>
  <bean id="sortHeaderRenderer" class="org.sakaiproject.sms.renderers.SortHeaderRenderer"/>
  <bean id="tablePagerRenderer" class="org.sakaiproject.sms.renderers.TablePagerRenderer"/>

  <bean id="searchResultsRenderer" class="org.sakaiproject.sms.renderers.SearchResultsRendererImpl">
   <property name="sortHeaderRenderer" ref="sortHeaderRenderer"/>
  	<property name="searchFilterBean" ref="searchFilterBean"/>
  </bean>

  <!-- Binding  Beans -->
  <bean id="searchFilterBean" class="org.sakaiproject.sms.hibernate.bean.SearchFilterBean"/>	
  
  <bean id="searchMessageLog" class="org.sakaiproject.sms.hibernate.bean.SearchFilterBean"/>	
  <bean id="searchTaskList" class="org.sakaiproject.sms.hibernate.bean.SearchFilterBean"/>	
  <bean id="searchTransactionLog" class="org.sakaiproject.sms.hibernate.bean.SearchFilterBean"/>	
  
  

  <!--  Producers -->
  <bean class="org.sakaiproject.sms.producers.SmsTestProducer" />
  <bean class="org.sakaiproject.sms.producers.SmsConfigProducer"/>
  <bean class="org.sakaiproject.sms.producers.BillingAdminProducer" >
  	<property name="smsAccountLogic" ref="org.sakaiproject.sms.hibernate.logic.SmsAccountLogic" />
  </bean>	
  
  <bean id="searchListProducer" class="org.sakaiproject.sms.producers.SearchListProducer">
  	<property name="searchCriteriaRenderer" ref="searchCriteriaRenderer"/>  
  	<property name="searchResultsRenderer" ref="searchResultsRenderer"/>
  	<property name="tablePagerRenderer" ref="tablePagerRenderer"/>
  </bean>

  <!--  Action Beans -->  
  <bean id="SmsTestActionBean" class="org.sakaiproject.sms.beans.SmsTestActionBean">
  	<property name="smsSmpp" ref="org.sakaiproject.sms.api.SmsSmpp" />
  	<property name="smsMessageLocator" ref="SmsMessageLocator" />
  	<property name="messages" ref="targettedMessageList"/>
  </bean>

  <bean id="smsConfigActionBean" class="org.sakaiproject.sms.beans.SmsConfigActionBean">
  	 <property name="smsConfigLocator" ref="SmsConfigLocator"/>
  	 <property name="smsConfigLogic" ref="smsConfigLogic"/>
  </bean>
  
  <!-- Locators -->
  <bean id="SmsMessageLocator" class="org.sakaiproject.sms.otp.SmsMessageLocator" />
  <bean id="SmsConfigLocator" class="org.sakaiproject.sms.otp.SmsConfigLocator">
  	<property name="smsConfigLogic" ref="smsConfigLogic"/>
  </bean>
  
</beans>